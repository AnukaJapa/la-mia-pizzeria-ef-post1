@{
    Layout = "_BaseLayout";
}

@model Pizza

<div class="container">
<form asp-controller ="Home" asp-action="Create">
        @Html.AntiForgeryToken() <!-- per sicurezza dei dati-->
    <div class="mb-3">
        <label>Titolo:</label>
        <input asp-for="Title" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label>Descrizione:</label>
        <textarea asp-for="Description" rows="10" class="d-block w-100"></textarea>
    </div>
    <div class="mb-3">
        <label>Path Image:</label>
        <input asp-for="Image" type="text" class="form-control">
    </div>

        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
</form>
</div>